{
	"easycom": {
		"^tn-(.*)": "@/tuniao-ui/components/tn-$1/tn-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index",
			"style": {
				"navigationBarTitleText": "营地",
				"mp-weixin": {
					"disableScroll": true
				},
				"app-plus": {
					"bounce": "none"
				},
				"mp-alipay": {
					"allowsBounceVertical": "NO"
				},
				"mp-baidu": {
					"disableScroll": true
				}
			}
		}, {
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}

		}
	],
	"subPackages": [{
		"root": "campPages",
		"pages": [{
			"path": "createCamp/createCamp",
			"style": {
				"navigationBarTitleText": "创建营地",
				"enablePullDownRefresh": false
			}
		}, {
			"path": "result",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "campInfoType/campInfoType",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "campInfoType/campInfoSelect",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "campDetail",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "bloggerInfo/bloggerInfo",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}

		}]
	}],
	"globalStyle": {
		"navigationStyle": "custom",
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "unll-404",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#fff"
	}
}